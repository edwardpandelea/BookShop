@model IEnumerable<Genre>

<style>
    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .dropdown > .dropdown-toggle:active {
        /*Without this, clicking will make it sticky*/
        pointer-events: none;
    }
    a:hover
    {
        color: #ffd300 !important;
    }
    
</style>
<link rel="stylesheet" href="~/css/style.css" />

<li class="nav-item dropdown bg-dark">
    <a class="nav-link dropdown navbarCustomTextColor bg-dark" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Genuri
    </a>
    <ul class="dropdown-menu bg-dark " aria-labelledby="navbarDropdown">
        @foreach (var genre in Model)
        {
            <li class=""><a class="dropdown-item bg-dark" style="color:#e0b129; transform:none !important;" asp-controller="Book" asp-action="List" asp-route-genre="@genre.genreName">@genre.genreName</a></li>

        }
        <li> <a class="dropdown-item bg-dark customTextColor" asp-controller="Book" asp-action="List">Toate cărțile</a>    </li>

    </ul>
</li>
