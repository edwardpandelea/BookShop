@model BookListViewModel

    <link rel="stylesheet" href="~/css/style.css" />


    <h1 class="customTextColor text-center m-3">@Model.CurrentGenre</h1>

<div class="row row-cols-1 row-cols-md-6 g-1 w-100">
        @foreach (var book in Model.Books)
        {

        <div class="card bg-dark m-3 " style="width: 17.82rem;">
                <img src=@book.imgUrl class="card-img-top p-4" width="80px" height="320px" alt="BookImage">
                <div class="card-body d-flex flex-column h-100">
                    <h5 class="card-title text-white">@book.title</h5>
                    <h6 class="card-subtitle text-muted mb-2">@book.author</h6>

                    <p class="card-text text-white" style="overflow-y: auto;">@book.shortDescritpion</p>

                <a asp-controller="Book" asp-action="Details" asp-route-id=@book.bookId class=" stretched-link mt-auto btn btn-primary btn-dark customTextColor ">Buy</a>


                </div>

                <div class="card-footer d-flex justify-content-center text-white">@book.publisher</div>
            </div>

        }
    </div>

   