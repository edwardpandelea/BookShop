@model Book

<div class="containerborder border-dark rounded p-3 w-100">
    <div class="card mb-3 bg-dark  " style="max-width: auto;">
        <div class="row g-0">
            <div class="col-md-4 d-flex justify-content-center">
                <img src=@Model.imgUrl class="img-fluid rounded-start m-2" alt="imgBook" height="800px" width="400px">
            </div>
            <div class="col-md-8">
                <div class="card-body text-white">
                    <h5 class="card-title mt-3 mb-3">@Model.title</h5>
                    <h6 class="card-subtitle text-muted mb-3">@Model.author</h6>
                    <p class="card-text text-justify ">@Model.description</p>
                    <p class="card-text mb-3"><small class="text-muted">@Model.publisher</small></p>
                    <div class="row align-items-end">
                        <div class="col mt-5">
                            <table class="table table-dark table-hover w-100 h-100" >
                                <tr class="table-dark">
                                    <td class="table-dark">
                                        Title
                                    </td>
                                    <td class="table-dark">
                                        @Model.title
                                    </td>
                                </tr>
                                <tr class="table-dark">
                                    <td class="table-dark">
                                        Author
                                    </td>
                                    <td class="table-dark">
                                        @Model.author
                                    </td>
                                </tr>
                                <tr class="table-dark">
                                    <td class="table-dark">
                                        Publish Year
                                    </td>
                                    <td class="table-dark">
                                        @Model.publishYear
                                    </td>
                                </tr>
                                <tr class="table-dark">
                                    <td class="table-dark">
                                        Genre
                                    </td>
                                    <td class="table-dark">
                                        @Model.genre.genreName
                                    </td>
                                </tr>

                                <tr class="table-dark">
                                    <td class="table-dark">
                                        Publisher
                                    </td>
                                    <td class="table-dark">
                                        @Model.publisher
                                    </td>
                                </tr>
                            </table>
                           

                        </div>
                        <div class="col-md-8">
                            <h4 class="text-white d-flex justify-content-center mt-5 mb-5 ">@Model.price RON</h4>
                        
                            <a href="#" class="btn btn-primary btn-dark customTextColor mt-5 font-weight-bold w-100 bottom-0 align-content-center"><h3 class="d-flex justify-content-center ">Buy</h3></a>
                        </div>
                    </div>
                    
                    

                    
                </div>
                
            </div>
        </div>
    </div>
    

</div>