@model BookListViewModel

 <!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BookShop</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
  <body>
    <style>

        .carousel-item
        {
           height: 8rem; 

        }
     
        
        
    </style>
    <div id="carouselExampleSlidesOnly" class="carousel m-2 slide bg-dark rounded" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container align-content-lg-center" style="height:100%;">
                    <div class="row justify-content-md-center">
                        <div class="col-md-auto customTextColor">
                            'To live is the rarest thing in the world. Most people exist, that is all.'
                        </div>
                    </div>
               
                    <div class="row justify-content-md-center">
                    <div class="col-md-auto customTextColor">
                        -Oscar Wilde
                    </div>
                    </div>

                 </div>
                
            </div>
            <div class="carousel-item">
                <div class="container align-content-lg-center" style="height:100%;">
                    <div class="row justify-content-md-center">
                        <div class="col-md-auto customTextColor">
                            'That it will never come again is what makes life so sweet.' 
                        </div>
                    </div>
               
                    <div class="row justify-content-md-center">
                    <div class="col-md-auto customTextColor">
                        -Emily Dickinson
                    </div>
                    </div>

                 </div>
                
            </div>
            <div class="carousel-item">
                 <div class="container align-content-lg-center" style="height:100%;">
                    <div class="row justify-content-md-center">
                        <div class="col-md-auto customTextColor">
                            'It is never too late to be what you might have been.' 
                        </div>
                    </div>
               
                    <div class="row justify-content-md-center">
                    <div class="col-md-auto customTextColor">
                        -George Eliot
                    </div>
                    </div>

                 </div>
            </div>
            
        </div>
        
    </div>

    <div class="text-center mt-3">
        <img src="~/Images/logo.png" class="img-fluid" width="300px" height="300px" alt="logo">
    </div>
   <h2 class="text-center mt-5 customTextColor font-weight-bold">Most Sold Books</h2>
    <div class="row row-cols-1 row-cols-md-6 g-1 w-100">
        @foreach (var book in Model.Books)
        {

            <div class="card bg-dark m-3 " style="width: 17.82rem;">
                <img src=@book.imgUrl class="card-img-top p-4" width="80px" height="320px" alt="BookImage">
                <div class="card-body d-flex flex-column h-100">
                    <h5 class="card-title text-white">@book.title</h5>
                    <h6 class="card-subtitle text-muted mb-2">@book.author</h6>

                    <p class="card-text text-white" style="overflow-y: auto;">@book.shortDescritpion</p>

                    <a asp-controller="Book" asp-action="Details" asp-route-id=@book.bookId class=" stretched-link mt-auto btn btn-primary btn-dark customTextColor ">Buy</a>


                </div>

                <div class="card-footer d-flex justify-content-center text-white">@book.publisher</div>
            </div>

        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>